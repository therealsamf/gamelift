{
    "compilerOptions": {
        "experimentalDecorators": true,
        "outDir": "./dist",
        "rootDir": "./lib",
        "lib": ["esnext"],
        "target": "es6",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "module": "CommonJS",
        "noEmit": false,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "typeRoots": [
            "./node_modules/@types",
            "./types/",
        ]
    }
}
